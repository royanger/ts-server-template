{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "lib": [
            "es2022",
            "dom"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "esm": true,
    },
}